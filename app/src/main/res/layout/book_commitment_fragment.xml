<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.ui.choose_book.BookCommitmentFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="600"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:text="@string/fragmentbookcommitment_subtitle" />

    <EditText
        android:id="@+id/fragmentbookcommitment_sv"
        android:queryHint="Search Title..."
        android:hint="Search Title..."
        android:clickable="true"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/fragmentbookcommitment_rv"/>

</LinearLayout>