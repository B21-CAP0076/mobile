<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:id="@+id/commitmentrvitem_book1_card"
    android:layout_height="wrap_content">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="143dp"
                android:paddingRight="4dp"
                android:id="@+id/commitmentrvitem_book1_img" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:textFontWeight="700"
                    android:textSize="16sp"
                    android:textColor="@color/purple_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commitmentrvitem_book1_hobby" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="700"
                    android:textSize="20sp"
                    android:id="@+id/commitmentrvitem_book1_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="500"
                    android:textSize="16sp"
                    android:id="@+id/commitmentrvitem_description" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:id="@+id/commitmentrvitem_book1_deadline"/>


        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>