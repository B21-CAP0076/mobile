<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:id="@+id/commitmentrvitem_book_card"
    android:layout_height="wrap_content">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textFontWeight="700"
                android:textSize="16sp"
                android:textColor="@color/purple_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commitmentrvitem_book1_hobby" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/commitmentrvitem_book1_hobby"
                        app:layout_constraintEnd_toStartOf="@id/commitmentrvitem_book2_img"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="90dp"
                        android:layout_height="143dp"
                        android:paddingHorizontal="2dp"
                        android:id="@+id/commitmentrvitem_book1_img" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/commitmentrvitem_user1_profpic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingHorizontal="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/commitmentrvitem_book2_img"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/commitmentrvitem_book1_hobby"
                        app:layout_constraintVertical_bias="0.0" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/commitmentrvitem_book2_img"
                        android:layout_width="90dp"
                        android:layout_height="143dp"
                        android:layout_marginStart="4dp"
                        android:paddingHorizontal="2dp"
                        app:layout_constraintStart_toEndOf="@id/commitmentrvitem_book1_img"
                        app:layout_constraintTop_toBottomOf="@id/commitmentrvitem_book1_hobby" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/commitmentrvitem_user2_profpic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:paddingHorizontal="2dp"
                        app:layout_constraintStart_toEndOf="@id/commitmentrvitem_book1_img"
                        app:layout_constraintTop_toBottomOf="@id/commitmentrvitem_book1_hobby" />
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/commitmentrvitem_book1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        app:layout_constraintStart_toEndOf="@id/commitmentrvitem_book2_img"
                        app:layout_constraintTop_toTopOf="@id/commitmentrvitem_book1_hobby" />

                    <TextView
                        android:id="@+id/commitmentrvitem_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textFontWeight="500"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/commitmentrvitem_book1_deadline"
                        app:layout_constraintStart_toEndOf="@id/commitmentrvitem_book2_img"
                        app:layout_constraintTop_toBottomOf="@id/commitmentrvitem_book1_title" />

                    <TextView
                        android:id="@+id/commitmentrvitem_book1_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/commitmentrvitem_description"
                        app:layout_constraintStart_toEndOf="@id/commitmentrvitem_book2_img"
                        app:layout_constraintTop_toBottomOf="@+id/commitmentrvitem_description" />
                </LinearLayout>
            </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>