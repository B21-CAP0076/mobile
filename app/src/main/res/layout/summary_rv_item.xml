<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="28dp"
    android:clipToPadding="true"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/summaryrvitem_bookimg"
            android:layout_width="140dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/summaryrvitem_creator"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/summaryrvitem_bookimg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summaryrvitem_summary"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/summaryrvitem_bookimg"
            app:layout_constraintTop_toBottomOf="@id/summaryrvitem_creator"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/summaryrvitem_datecreated"
            app:layout_constraintStart_toEndOf="@+id/summaryrvitem_bookimg"
            app:layout_constraintTop_toBottomOf="@id/summaryrvitem_summary"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>